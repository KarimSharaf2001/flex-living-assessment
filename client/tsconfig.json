{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - DISABLE THESE FOR DEPLOYMENT */
    "strict": true,
    "noUnusedLocals": false, // <--- Change to false
    "noUnusedParameters": false, // <--- Change to false
    "noFallthroughCasesInSwitch": true,

    /* Fix import.meta.env error */
    "types": ["vite/client"] // <--- Add this line
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
